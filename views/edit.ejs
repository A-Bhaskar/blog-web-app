<%- include ("partials/header") %>
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h2 style="text-align: center;"><%= tour.name %></h2>
            <form action="/tourplace/<%= tour._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text"  value="<%= tour.name %>" name="tour[name]" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  value="<%= tour.image %>" name="tour[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  value="<%= tour.discription %>" name="tour[discription]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">submit</button>
                </div>
               
            </form>
            <a href="/tourplace">Go back</a>
        </div>
        
    </div>
</div>
<%- include ("partials/footer") %>
