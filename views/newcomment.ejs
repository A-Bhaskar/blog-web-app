    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h2 style="text-align: center;">Add New Comment to <%= tour.name %> </h2>
            <form action="/tourplace/<%= tour._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text"  placeholder="text" name="comment[text]" >
                </div>
              
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">submit</button>
                </div>
               
            </form>
            <a href="/tourplace">Go back</a>
        </div>
        
    </div>
</div>
