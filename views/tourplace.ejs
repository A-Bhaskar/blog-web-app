<%- include ("partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to <strong>Heaven</strong></h1>
            <p>Pick your best one from all over india.</p>
            <p>
                <a class="btn btn-primary btn-large" href="/tourplace/new">Add new place </a>
            </p>
        </div>    
    </header>
    <div class="row text-center" style="display: flex;flex-wrap: wrap;">
        <% tour.forEach(function(tour){ %>
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail ">
                <img src="<%= tour.image %>" class="img-thumbnail" >
                <div class="caption">
                    <h4><%= tour.name %></h4>
                </div>
                <p>
                    <a href="/tourplace/<%= tour._id %>" class="btn btn-primary">More info</a>
                </p>
            </div>
            
        </div>
        <% });%> 
    </div>
</div>


<%- include ("partials/footer") %>